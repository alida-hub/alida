<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>revision.txt</include>
        <include>LICENSE*</include>
        <include>README.alida</include>
      </includes>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>share/docu</directory>
      <outputDirectory>share/docs</outputDirectory>
      <includes>
        <include>AlidaManual.pdf</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>share/logo</directory>
      <outputDirectory>share/logo</outputDirectory>
      <includes>
	<include>Alida_logo.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>share/scripts</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>run*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>share/examples/workflows</directory>
      <outputDirectory>share/examples/workflows</outputDirectory>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>share/examples/data</directory>
      <outputDirectory>share/examples/data</outputDirectory>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory>jars</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
  </dependencySets>
</assembly>
