<assembly>
  <id>sources</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>jar</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/main/java</directory>
      <outputDirectory></outputDirectory>
      <filtered>true</filtered>
    </fileSet>
<!-- Attention, don't include test sources, leads to problems in Javadoc! -->
<!--    <fileSet>
      <directory>src/test/java</directory>
      <outputDirectory></outputDirectory>
      <filtered>true</filtered>
    </fileSet>-->
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>LICENSE_alida.txt</include>
        <include>revision.txt</include>
      </includes>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory></outputDirectory>
      <excludes>
        <exclude>LICENSE_alida.txt</exclude>
        <exclude>revision.txt</exclude>
      </excludes>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <directory>share/docu</directory>
      <outputDirectory>share/docs</outputDirectory>
      <includes>
        <include>AlidaManual.pdf</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>share/logo</directory>
      <outputDirectory>share/logo</outputDirectory>
      <includes>
	<include>Alida_logo.*</include>
	<include>Grappa_logo.*</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
